<div class="row">
    <div class="col-md-4">
        <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
        <br>
    </div>
    <div class="col-md-8">
        <p>{{user.name}}</p>
        <p>{{user.email}}</p>
        <p>Already commented on {{user.Comments.length}} restaurants.</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary" role="button" aria-pressed="true">Edit</a>
    </div>
    <hr>
</div>

<hr>

<div class="card">
    <div class="card-header">
        Already commented on {{user.Comments.length}} restaurants.
    </div>
    <div class="card-body row">
        {{#each user.Comments}}
        <div class="col-2">
            <a href="/restaurants/{{this.Restaurant.id}}">
                <img src="{{this.Restaurant.image}}" alt="" class="mx-1"
                    style="width:100px; height:100px; object-fit:cover">
            </a>
        </div>
        {{/each}}
    </div>
</div>

<br />
