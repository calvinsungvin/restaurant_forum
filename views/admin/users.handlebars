<h1>使用者後台</h1>

<a href='/admin/restaurants'>Restaurants</a>
<span>|</span>
<a href='/admin/users'>Users</a>

<br />
<br />

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <form action="/admin/users/{{this.id}}?_method=PUT" method="POST">
                <td>{{this.id}}</td>
                <td>{{this.email}}</td>
                {{#if this.isAdmin}}
                <td>admin</td>
                <td>
                    <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-link">set as user</button>
                    </form>
                </td>
                {{else}}
                <td>user</td>
                <td>
                    <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-link">set as admin</button>
                    </form>
                </td>
                {{/if}}
            </form>
        </tr>
        {{/each}}
    </tbody>
</table> 